<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FreshDrink</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FreshDrink.styles.css" asp-append-version="true" />
</head>
<body style="background-color: antiquewhite">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light mb-3 mt-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img id="logo-navbar" src="~/img/freshdrink-logo.jpg" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Demo/Index"><strong>Intro</strong></a>
                        </li>
                        @* <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Privacy"><strong>Privacy</strong></a>
                        </li>*@
                    </ul>
                </div>
                <div class="dropdown">
                    <button style="background-color: transparent; margin-right: 300px" class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <strong>Demo</strong>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item text-dark" asp-page="/Demo/Agente">Dipendenti</a></li>
                        <li><a class="dropdown-item text-dark" asp-page="/Demo/Cliente">Clienti</a></li>
                        <li><a class="dropdown-item text-dark" asp-page="/Demo/Prodotto">Prodotti</a></li>
                        <li><a class="dropdown-item text-dark" asp-page="/Demo/Giacenza">Giacenze</a></li>
                        @*<li><a class="dropdown-item text-dark" asp-page="/Demo/Contratto">Contratti</a></li>*@
                        @*<li><a class="dropdown-item text-dark" asp-page="/Demo/Ordine">Ordini</a></li>*@
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <strong>&copy; 2023 - FreshDrink - </strong><a asp-area="" asp-page="/Privacy"><strong class="text-dark text-decoration-underline">Privacy</strong></a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
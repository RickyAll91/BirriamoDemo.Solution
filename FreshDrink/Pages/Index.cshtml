@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div id="login-form" class="container">
    <h5 class="mt-3 text-center"><strong>Inserire lo user admin per accedere ai clienti</strong></h5>
    <form method="post" class="mt-3">
        <input class="form-control" asp-for="User" type="text" placeholder="Username"  required>
        <div asp-validation-for="User" class="text-danger bold"></div>

        <input class="form-control mt-3" asp-for="Password" type="password" placeholder="Password"  required>
        <div asp-validation-for="Password" class="text-danger bold"></div>
        <div asp-validation-summary="All" class="text-danger bold"></div>

        <input type="submit" value="Accedi" class="btn btn-warning mt-3 text-black bold" id="submit-button">
    </form>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Quando la pagina è completamente caricata
            var body = document.getElementsByTagName("body")[0];
            body.classList.add("background-hidden");
        });
    </script>
}